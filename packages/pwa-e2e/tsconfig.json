{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./lib",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "target": "esnext",
    "strict": true,
    "pretty": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "paths": {
      "*": [
        "*"
      ]
    },
    "typeRoots": [
      "./types",
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "node_modules/@types",
    "src/**/*"
  ]
}